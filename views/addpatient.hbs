{{> header}}

<link rel="stylesheet" href="/common/addpatient.css">
<link rel="stylesheet" href="/common/loginregister.css">

<div class="main-content">
    <!-- ======= Title ======= -->
    <div class="_title container-fluid">
        <h1>Add Patient Data</h1>
        <h2 id="time"></h2>
    </div>

    <!-- ======= Registration Details ======= -->
    <div class="reg-content">
        <form action="/addpatient-db" method="post" onsubmit="return confirm('Proceed with registering a new patient?');">
            <table class="reg-items">
                <tr>
                    <th class="item-label"><h5>Full Name</h5></th>
                </tr>
                <tr>
                    <th class="item-container"><input class="input-item form-control" type="text" id="fname" name="fname" placeholder="First Name" required></th>
                    <th class="item-container"><input class="input-item form-control" type="text" id="mname" name="mname" placeholder="Middle Name"></th>
                    <th class="item-container"><input class="input-item form-control" type="text" id="lname" name="lname" placeholder="Last Name" required></th>
                </tr>
                <tr>
                    <th class="item-label"><h5>Age</h5></th>
                    <th class="item-label"><h5>Sex</h5></th>
                    <th class="item-label"><h5>Birthday</h5></th>
                </tr>
                <tr>
                    <th class="item-container"><input class="input-item form-control" type="number" id="age" name="age" min="0" required></th>
                    <th class="item-container"> 
                        <select class="input-item form-control" name="sex" id="sex">
                            <option value="M">Male</option>
                            <option value="F">Female</option>
                        </select>
                    </th>
                    <th class="item-container"><input class="input-item form-control" type="date" id="bday" name="bday"></th>
                </tr>
            </table>
            <table class="reg-items">
                <tr>
                    <th class="item-label two-col"><h5>Phone Number</h5></th>
                    <th class="item-label two-col"><h5>Email</h5></th>
                </tr>
                <tr>
                    <th class="item-container"><input class="input-item form-control" type="text" id="pnum" name="pnum" placeholder="(09XX) XXX XXXX" required></th>
                    <th class="item-container"><input class="input-item form-control" type="text" id="email" name="email" placeholder="username@bioscopic.com" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"></th>
                </tr>
                <tr>
                    <th class="item-label"><h5>Address</h5></th>
                </tr>
                <tr>
                    <th class="item-container" colspan="2"><input class="input-item form-control" type="text" id="address" name="address" required></th>
                </tr>
            </table>
            <div class="btn-container" colspan="2"><input class="reg-btn btn btn-primary btn-lg" type="submit" value="REGISTER"></div>
        </form>
    </div>
</div>
